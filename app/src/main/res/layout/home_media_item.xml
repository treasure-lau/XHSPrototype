<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/layout_ad"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_all_line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/base_gray40"
            android:id="@+id/tv_name"
            android:padding="@dimen/margin_litte"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:lineSpacingExtra="@dimen/text_linespacingextra"
            style="@style/TextSmall" />

        <FrameLayout
            android:id="@+id/recommend_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="end"
                android:layout_gravity="left"
                android:id="@+id/tv_extra"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="32.0dip"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/TextSmall.Gray60" />

            <ImageView
                android:layout_gravity="right"
                android:id="@+id/icon_down_arrow"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginRight="8.0dip"
                android:src="@drawable/ic_note_hide_arrow"
                android:scaleType="centerInside"
                android:layout_centerVertical="true" />
        </FrameLayout>

        <View
            android:background="@color/base_gray80"
            android:layout_width="fill_parent"
            android:layout_height="0.39999998dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="8.0dip" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.xingin.xhs.widget.AvatarImageView
                android:layout_gravity="left"
                android:id="@+id/iv_avatar"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginBottom="8.0dip" />

            <FrameLayout
                android:gravity="center"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:id="@+id/layout_like_num"
                android:layout_width="48.0dip"
                android:layout_height="30.0dip"
                android:layout_marginRight="2.0dip">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_like_num"
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:layout_marginLeft="4.0dip" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center|left"
                    android:id="@+id/tv_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18.0dip"
                    android:singleLine="true"
                    style="@style/TextSmall.Gray80" />
            </FrameLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="28.0dip"
                android:layout_marginLeft="34.0dip"
                android:layout_marginRight="50.0dip">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:singleLine="true"
                    style="@style/Text10Size.Gray40" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>