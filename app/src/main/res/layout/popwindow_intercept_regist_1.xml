<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimension_75">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_95"
            android:src="@drawable/intercept_register_click_regist" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_20">

            <TextView
                android:gravity="center"
                android:id="@+id/intercept_register_weixin"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/login_with_wechat"
                android:drawableTop="@drawable/intercept_register_line_weixin"
                android:drawablePadding="@dimen/dimension_11"
                android:layout_weight="1.0" />

            <TextView
                android:gravity="center"
                android:id="@+id/intercept_register_weibo"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/login_with_sina_weibo"
                android:drawableTop="@drawable/intercept_register_line_weibo"
                android:drawablePadding="@dimen/dimension_11"
                android:layout_weight="1.0" />

            <TextView
                android:gravity="center"
                android:id="@+id/intercept_register_qq"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/login_with_qzone"
                android:drawableTop="@drawable/intercept_register_line_qq"
                android:drawablePadding="@dimen/dimension_11"
                android:layout_weight="1.0" />

            <TextView
                android:gravity="center"
                android:id="@+id/intercept_register_phone"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/login_with_phone"
                android:drawableTop="@drawable/intercept_register_line_phone"
                android:drawablePadding="@dimen/dimension_11"
                android:layout_weight="1.0" />
        </LinearLayout>

        <Button
            android:textSize="@dimen/text_medium"
            android:textColor="@color/base_gray40"
            android:id="@+id/intercept_register_cancel"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_20"
            android:text="@string/cancel" />
    </LinearLayout>

    <com.xingin.xhs.widget.XYImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/intercept_register_img_redpacket"
        android:layout_width="@dimen/dimension_250"
        android:layout_height="@dimen/dimension_150" />
</FrameLayout>