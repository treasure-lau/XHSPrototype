<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="#00000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/bg"
        android:background="@color/transparent_black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:id="@+id/ic_container"
        android:background="@color/white"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_rec_club"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_score_red_club"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:src="@drawable/icon_not_red_club"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:text="REDclub积分 · "
                style="@style/TextNormal.Gray40" />

            <TextView
                android:id="@+id/tv_red_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextNormal.ShallowRed" />

            <ImageView
                android:id="@+id/img_user_question_red"
                android:paddingLeft="8.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_userinfo_question" />

            <TextView
                android:gravity="right"
                android:id="@+id/my_red_club"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_red_club"
                android:drawableRight="@drawable/icon_arrow"
                android:drawablePadding="4.0dip"
                style="@style/TextNormal.Gray40" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_now_history"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:src="@drawable/xyvg_me_point"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:text="现有积分 · "
                style="@style/TextNormal.Gray40" />

            <TextView
                android:id="@+id/tv_now_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextNormal.ShallowRed" />

            <ImageView
                android:id="@+id/img_user_question"
                android:paddingLeft="8.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_userinfo_question" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:src="@drawable/xyvg_me_location"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                style="@style/TextNormal.Gray40" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_sex"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:src="@drawable/ic_gift"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_info_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                style="@style/TextNormal.Gray40" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>