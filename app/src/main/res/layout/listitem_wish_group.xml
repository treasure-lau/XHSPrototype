<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/common_bg_white_gray_stroke"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="278.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="4.0dip">

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/base_gray"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认心愿单"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/base_white_gray"
            android:id="@+id/iv_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/only_see_self"
            android:layout_alignBottom="@id/tv_title"
            android:layout_alignParentRight="true" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_one_big"
            android:layout_width="160.0dip"
            android:layout_height="160.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="10.0sp"
            android:textColor="@color/white"
            android:id="@+id/tv_count"
            android:background="@drawable/common_bg_round_dark"
            android:paddingLeft="8.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:text="4个笔记"
            android:layout_alignRight="@id/iv_one_big"
            android:layout_alignBottom="@id/iv_one_big" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_two"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_below="@id/iv_one_big"
            android:layout_alignLeft="@id/iv_one_big" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_three"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_below="@id/iv_one_big"
            android:layout_centerHorizontal="true" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_four"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_below="@id/iv_one_big"
            android:layout_alignRight="@id/iv_one_big" />

        <Button
            android:textSize="14.0sp"
            android:textColor="@color/base_white_gray"
            android:id="@+id/button"
            android:background="@drawable/btn_bg_white_gray_stroke"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:layout_marginTop="3.0dip"
            android:text="@string/btn_edit"
            android:layout_below="@id/iv_four" />
    </RelativeLayout>
</LinearLayout>