<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:paddingTop="13.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/chat_text_date_style" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_userhead"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:src="@drawable/common_bg_avatar_loadfail"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_chatcontent"
            android:background="@drawable/chatgroup_bg_sent_obj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_toLeftOf="@id/iv_userhead">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="分享笔记"
                style="@style/TextNormal" />

            <View
                android:background="@color/line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.39999998dip" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.0dip">

                <com.xingin.xhs.widget.XYImageView
                    android:id="@+id/note_image"
                    android:layout_width="170.0dip"
                    android:layout_height="170.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip" />

                <com.xingin.xhs.widget.AvatarImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="26.0dip"
                    android:layout_height="26.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_below="@id/note_image" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_name"
                    android:layout_height="26.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_alignTop="@id/iv_avatar"
                    style="@style/text_selection_name" />

                <TextView
                    android:id="@+id/tv_text_desc"
                    android:paddingTop="5.0dip"
                    android:layout_width="170.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="4.0dip"
                    android:lines="2"
                    android:layout_below="@id/iv_avatar"
                    android:lineSpacingExtra="2.0dip"
                    style="@style/TextNormal.Gray60" />
            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_marginRight="-40.0dip"
            android:layout_toLeftOf="@id/ll_chatcontent"
            android:layout_centerVertical="true"
            style="@android:style/Widget.ProgressBar.Small.Inverse" />

        <ImageView
            android:id="@+id/iv_retry"
            android:visibility="gone"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_marginRight="-40.0dip"
            android:src="@drawable/ic_send_fail"
            android:layout_toLeftOf="@id/ll_chatcontent"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>