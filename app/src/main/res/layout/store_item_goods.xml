<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:id="@+id/layout_goods"
    android:background="@drawable/common_white_to_gray"
    android:padding="12.0dip"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_alignParentLeft="true" />

    <com.xingin.xhs.ui.shopping.GoodsCoverView
        android:id="@+id/iv_img_cover"
        android:padding="16.0dip"
        android:visibility="gone"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:src="@drawable/ic_soldout"
        android:layout_alignLeft="@id/iv_img"
        android:layout_alignTop="@id/iv_img" />

    <ImageView
        android:id="@+id/iv_img_preview"
        android:padding="16.0dip"
        android:visibility="gone"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_alignLeft="@id/iv_img"
        android:layout_alignTop="@id/iv_img" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_gray"
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:lines="3"
        android:layout_toRightOf="@id/iv_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_shallow_black"
        android:id="@+id/origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/iv_img"
        android:layout_below="@id/title" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_shallow_black"
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/origin_price"
        android:layout_below="@id/title" />

    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/base_shallow_red"
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 120"
        android:layout_toRightOf="@id/iv_img"
        android:layout_below="@id/discount" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_gray"
        android:id="@+id/good_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅剩5件"
        android:layout_alignBottom="@id/price"
        android:layout_alignParentRight="true" />
</RelativeLayout>