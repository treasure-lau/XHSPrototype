<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ll_content_fav"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:paddingBottom="15.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:background="@drawable/common_top_round_white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/base_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:text="@string/add_to_board" />

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/base_black"
            android:id="@+id/add_new_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_create_wish_list"
            android:drawablePadding="7.0dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_add_new_board" />
    </RelativeLayout>

    <View
        android:id="@+id/spitview"
        android:background="#ffcdcdcd"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_fav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#ffcdcdcd"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="@color/white"
            android:id="@+id/add_to_fav"
            android:background="@drawable/bg_send_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:text="@string/add_friend_finsh" />
    </LinearLayout>

    <View
        android:background="@drawable/common_bottom_round_white"
        android:layout_width="fill_parent"
        android:layout_height="6.0dip" />
</LinearLayout>