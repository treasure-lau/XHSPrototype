<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/common_bg_white_gray_stroke"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="278.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="4.0dip">

        <ImageView
            android:id="@+id/ivmgs"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56.0dip"
            android:src="@drawable/xyvg_placeholder_search_products"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="@color/base_gray60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="添加专辑"
            android:layout_below="@id/ivmgs"
            android:layout_centerHorizontal="true"
            style="@style/TextMedium" />
    </RelativeLayout>
</LinearLayout>