<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/ic_header"
        layout="@layout/ic_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:text="@string/create_success_you_group"
        style="@style/TextNormal.Gray60" />

    <TextView
        android:id="@+id/tv_group_name"
        android:padding="6.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_success_finish"
        style="@style/TextNormal.Gray60" />

    <View
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="80.0dip" />

    <com.xingin.xhs.widget.AvatarImageView
        android:id="@+id/iv_avatar"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_marginTop="16.0dip" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        style="@style/TextNormal" />

    <View
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="80.0dip" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:lineSpacingExtra="3.0dip"
        style="@style/TextNormal.Gray60" />

    <TextView
        android:id="@+id/btn_ok"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/create_success_i_know"
        style="@style/Button.Green" />
</LinearLayout>