<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv"
        android:background="@color/base_bg_gray"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="16.0dip" />

    <TextView
        android:textAppearance="@style/TextNormal"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.0dip"
        android:maxLines="1"
        android:layout_toRightOf="@id/iv"
        android:layout_alignTop="@id/iv" />

    <TextView
        android:textAppearance="@style/TextNormal"
        android:ellipsize="end"
        android:id="@+id/content_tv"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.0dip"
        android:maxLines="2"
        android:layout_toRightOf="@id/iv"
        android:layout_below="@id/tv_title" />

    <TextView
        android:textAppearance="@style/TextBig.Gray60"
        android:id="@+id/data_tv"
        android:paddingLeft="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv"
        android:layout_alignBottom="@id/iv" />

    <View
        android:id="@+id/divide_view"
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.30000007dip"
        android:layout_alignParentBottom="true" />
</RelativeLayout>