<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_gravity="bottom"
        android:id="@+id/navigateToSearch"
        android:background="@drawable/bg_yellow_round"
        android:padding="12.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginBottom="60.0dip"
        android:text="@string/find_more_share"
        style="@style/TextNormal.White" />

    <ImageView
        android:layout_gravity="bottom"
        android:id="@+id/icon_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginBottom="44.0dip"
        android:src="@drawable/guide_arrow_left_bottom" />
</FrameLayout>