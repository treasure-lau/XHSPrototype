<?xml version="1.0" encoding="utf-8"?>
<com.xingin.xhs.view.ScaleLayout android:orientation="vertical"
    android:id="@+id/layout_note"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:scale="1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="3.0dip"
        app:viewAspectRatio="1.0"
        app:placeholderImage="@color/base_bg_gray"
        app:failureImage="@color/base_bg_gray" />

    <TextView
        android:textAppearance="@style/TextBig.White"
        android:textSize="14.0sp"
        android:gravity="center"
        android:id="@+id/illegal_info_tv"
        android:background="@color/base_black_alpha_40"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</com.xingin.xhs.view.ScaleLayout>