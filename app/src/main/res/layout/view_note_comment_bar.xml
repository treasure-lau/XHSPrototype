<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/bg_color_note_comment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="#ffe6e6e6"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="7.0dip">

        <com.xingin.xhs.widget.AvatarImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_myavatar"
            android:layout_width="@dimen/commentbar_icon"
            android:layout_height="@dimen/commentbar_icon"
            android:layout_marginLeft="@dimen/margin_little_middle" />

        <TextView
            android:textSize="@dimen/text_normal"
            android:textColorHint="@color/base_white_gray"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/note_comment_bar_tv_content"
            android:background="@drawable/bg_note_comment_ed_text"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_nomal"
            android:paddingRight="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_nomal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:maxHeight="100.0dip"
            android:layout_weight="3.0" />

        <View
            android:background="@color/base_gray90"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="10.0dip" />
    </LinearLayout>
</LinearLayout>