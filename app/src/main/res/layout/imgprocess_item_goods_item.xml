<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_goods"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv_image"
        android:layout_width="94.0dip"
        android:layout_height="94.0dip"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_middle" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_little_middle"
        android:layout_marginTop="@dimen/margin_litte"
        android:layout_marginRight="@dimen/margin_middle"
        android:singleLine="true"
        android:layout_toRightOf="@id/iv_image"
        android:layout_alignTop="@id/iv_image"
        style="@style/TextNormal.Gray60" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_litte"
        android:layout_marginRight="@dimen/margin_middle"
        android:maxLines="2"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        style="@style/TextNormal" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_litte"
        android:layout_alignLeft="@id/tv_title"
        android:layout_alignBottom="@id/iv_image"
        style="@style/TextNormal.Gray60" />

    <TextView
        android:id="@+id/tv_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_litte"
        android:layout_alignBottom="@id/iv_image"
        android:layout_alignParentRight="true"
        style="@style/TextSmall.Gray60" />

    <View
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.70000005dip"
        android:layout_below="@id/iv_image" />
</RelativeLayout>