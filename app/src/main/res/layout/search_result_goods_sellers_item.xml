<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    android:padding="15.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.xingin.xhs.widget.XYImageView android:id="@+id/iv_logo"
        android:layout_width="90.0dip"
        android:layout_height="45.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="centerInside"
        app:actualImageScaleType="centerInside"
        app:roundedCornerRadius="5.0dip"
        app:roundingBorderWidth="1.0dip"
        app:roundingBorderColor="@color/background"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <TextView
        android:textSize="15.0sp"
        android:textStyle="bold"
        android:textColor="@color/base_black"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:drawablePadding="5.0dip"
        android:layout_toRightOf="@id/iv_logo" />

    <TextView
        android:textSize="@dimen/text_12"
        android:textColor="@color/base_gray40"
        android:ellipsize="end"
        android:id="@+id/tv_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_marginRight="3.0dip"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/iv_item_arrow"
        android:layout_below="@id/tv_item_name"
        android:layout_alignLeft="@id/tv_item_name" />

    <ImageView
        android:id="@+id/iv_item_arrow"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_icon_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/v_item_diver"
        android:background="#ffe6e6e6"
        android:layout_width="1.0px"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_logo"
        android:layout_alignBottom="@id/iv_logo"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>