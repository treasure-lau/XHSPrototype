<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="5.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="12.0sp"
        android:textColor="#ff666666"
        android:gravity="center"
        android:id="@+id/tv_time"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="6.0dip"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:src="@drawable/common_bg_avatar_loadfail"
            android:layout_alignParentRight="true" />

        <TextView
            android:textSize="12.0sp"
            android:textColor="#ff666666"
            android:id="@+id/tv_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="12.0dip"
            android:layout_toLeftOf="@id/iv_avatar" />

        <TextView
            android:id="@+id/tv_content"
            android:background="@drawable/chatting_bg_right"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="10.0dip"
            android:layout_marginLeft="60.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@id/iv_avatar"
            android:layout_below="@id/tv_name"
            style="@style/tv_chatcontent" />

        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_marginRight="-40.0dip"
            android:layout_toLeftOf="@id/tv_content"
            android:layout_centerVertical="true"
            style="@android:style/Widget.ProgressBar.Small.Inverse" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_retry"
            android:visibility="gone"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_marginRight="-40.0dip"
            android:src="@drawable/ic_send_fail"
            android:layout_toLeftOf="@id/tv_content"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>