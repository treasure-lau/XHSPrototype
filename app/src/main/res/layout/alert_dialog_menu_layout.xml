<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView
        android:layout_gravity="center"
        android:id="@+id/content_list"
        android:background="@drawable/bg_ffffff_button"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:listSelector="@drawable/bg_alert_dialog"
        android:cacheColorHint="@color/transparent"
        android:divider="@null" />

    <TextView
        android:textAppearance="@style/TextLarge.BottomSheetBlue"
        android:textSize="18.0sp"
        android:gravity="center"
        android:id="@+id/cancle_btn"
        android:background="@drawable/bg_ffffff_button"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="10.0dip"
        android:text="@string/common_btn_canal" />
</LinearLayout>