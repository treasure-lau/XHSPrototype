<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guide_horizon_scroll" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:src="@drawable/guide_white_top_arrow" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="5.0"
        style="@style/GuideWhiteStyle">

        <TextView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:paddingRight="4.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/tip_guide_scrolling"
            android:layout_weight="4.0"
            style="@style/TextMedium" />

        <View
            android:background="@color/line_color"
            android:layout_width="0.6dip"
            android:layout_height="32.0dip" />

        <TextView
            android:layout_gravity="center_vertical"
            android:paddingLeft="8.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/tip_i_know"
            android:layout_weight="1.0"
            style="@style/TextMedium.Red" />
    </LinearLayout>
</LinearLayout>