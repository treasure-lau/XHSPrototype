<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextNormal" />

            <TextView
                android:id="@+id/tv_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                style="@style/TextSmall.Gray60" />
        </LinearLayout>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_time_text"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/TextSmall.Gray60" />

        <ImageView
            android:id="@+id/icon_down_arrow"
            android:background="@null"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:src="@drawable/icon_down_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_attent"
            android:background="@drawable/bg_round_red"
            android:visibility="gone"
            android:layout_width="70.0dip"
            android:layout_height="25.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/TextNormal.White" />
    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
</FrameLayout>