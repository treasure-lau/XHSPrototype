<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:id="@+id/id_content_view"
    android:background="@drawable/common_white_to_gray"
    android:paddingTop="15.0dip"
    android:paddingBottom="15.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_wish_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:src="@drawable/icon_add_round" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_gray"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_wish_content"
        android:paddingRight="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:text="@string/wish_add_tip_content"
        android:drawableRight="@drawable/icon_arrow" />
</LinearLayout>