<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close"
            android:background="@drawable/tag_detail_close"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20.0dip" />

        <ImageView
            android:background="@drawable/lucky_wallet_header_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dip"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_black"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/play_rule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_marginRight="10.0dip"
        android:text="@string/seleck_luck_wallet_desc" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_marginRight="20.0dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:layout_weight="1.0">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/luckly_wallet_first"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />

            <View
                android:id="@+id/luckly_wallet_first_select"
                android:background="@drawable/icon_luckly_wallet_select"
                android:visibility="visible"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_alignRight="@id/luckly_wallet_first" />

            <TextView
                android:textSize="16.0dip"
                android:textStyle="bold"
                android:textColor="@color/base_gray60"
                android:id="@+id/luckly_wallet_first_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip"
                android:layout_below="@id/luckly_wallet_first"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/luckly_wallet_second"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />

            <View
                android:id="@+id/luckly_wallet_second_select"
                android:background="@drawable/icon_luckly_wallet_select"
                android:visibility="visible"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_alignRight="@id/luckly_wallet_second" />

            <TextView
                android:textSize="16.0dip"
                android:textStyle="bold"
                android:textColor="@color/base_gray60"
                android:id="@+id/luckly_wallet_second_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip"
                android:layout_below="@id/luckly_wallet_second"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_weight="1.0">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/luckly_wallet_third"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />

            <View
                android:id="@+id/luckly_wallet_third_select"
                android:background="@drawable/icon_luckly_wallet_select"
                android:visibility="visible"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_alignRight="@id/luckly_wallet_third" />

            <TextView
                android:textSize="16.0dip"
                android:textStyle="bold"
                android:textColor="@color/base_gray60"
                android:id="@+id/luckly_wallet_third_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip"
                android:layout_below="@id/luckly_wallet_third"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textSize="16.0dip"
        android:textColor="@color/base_red"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/determine"
        android:background="@drawable/bg_round40_red"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65.0dip"
        android:layout_marginTop="65.0dip"
        android:layout_marginRight="65.0dip"
        android:text="@string/determine_get_luck_wallet" />

    <TextView
        android:textSize="16.0dip"
        android:textColor="@color/base_gray60"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cancel"
        android:background="@drawable/bg_round40_base_gray80"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="65.0dip"
        android:text="@string/give_up_luck_wallet" />
</LinearLayout>