<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.xingin.xhs.widget.AvatarImageView
        android:id="@+id/iv_avatar"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:textColor="@color/base_gray"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18.0dip"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_alignTop="@id/iv_avatar" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:singleLine="true"
        android:layout_toLeftOf="@id/btn_follow"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        style="@style/TextSmall" />

    <TextView
        android:textColor="@color/base_gray60"
        android:id="@+id/tv_like_count"
        android:paddingBottom="6.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:layout_below="@id/tv_desc"
        android:layout_alignLeft="@id/tv_title"
        style="@style/TextSmall" />

    <TextView
        android:gravity="center"
        android:id="@+id/btn_follow"
        android:background="@drawable/btn_bg_white_gray_stroke"
        android:layout_width="80.0dip"
        android:layout_height="30.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>