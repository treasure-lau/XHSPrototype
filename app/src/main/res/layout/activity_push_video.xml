<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_top"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/vertical_line"
        android:showDividers="middle"
        android:dividerPadding="8.0dip">

        <FrameLayout
            android:id="@+id/all_cover"
            android:layout_width="fill_parent"
            android:layout_height="160.0dip">

            <com.osanwen.xhsprototype.library.blurimageviewlib.BlurImageView
                android:id="@+id/cover_big_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/shadow_bg_video_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/cover_view"
                    android:background="@color/black"
                    android:layout_width="120.0dip"
                    android:layout_height="120.0dip"
                    android:scaleType="fitCenter" />

                <TextView
                    android:textSize="14.0dip"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="bottom|center"
                    android:id="@+id/chose_cover"
                    android:background="@drawable/bg_gradient"
                    android:layout_width="120.0dip"
                    android:layout_height="30.0dip"
                    android:text="@string/push_video_select_cover" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/title_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/title_tv"
                android:padding="16.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:hint="@string/add_title"
                android:layout_weight="1.0"
                android:maxLength="30"
                style="@style/edit_style" />

            <TextView
                android:textColor="@color/base_gray80"
                android:textColorHint="@color/base_white_gray"
                android:id="@+id/title_number_tv"
                android:padding="16.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30" />
        </LinearLayout>

        <EditText
            android:id="@+id/text_content"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:maxLines="4"
            style="@style/edit_style" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_keyboard_and_emoji"
                android:paddingLeft="@dimen/margin_middle"
                android:paddingTop="@dimen/margin_nomal"
                android:paddingRight="@dimen/margin_middle"
                android:paddingBottom="@dimen/margin_nomal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xyvg_inputbar_emotion" />

            <ImageView
                android:id="@+id/iv_keyboard_and_at"
                android:paddingLeft="@dimen/margin_middle"
                android:paddingTop="@dimen/margin_nomal"
                android:paddingRight="@dimen/margin_middle"
                android:paddingBottom="@dimen/margin_nomal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xyvg_inputbar_at" />

            <ImageView
                android:id="@+id/iv_keyboard_and_hashtag"
                android:paddingLeft="@dimen/margin_middle"
                android:paddingTop="@dimen/margin_nomal"
                android:paddingRight="@dimen/margin_middle"
                android:paddingBottom="@dimen/margin_nomal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xyvg_inputbar_hashtag" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/postBtn"
        android:background="@drawable/btn_ic_finish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/text_big"
            android:textColor="@color/white"
            android:layout_gravity="bottom|center"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discovery_head_right_btn_push"
            android:drawableRight="@drawable/ic_post_arrow"
            android:drawablePadding="6.0dip" />
    </LinearLayout>

</LinearLayout>