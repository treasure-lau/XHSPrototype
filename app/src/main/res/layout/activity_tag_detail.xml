<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout android:id="@+id/swipe_layout"
    android:background="@color/background"
    android:addStatesFromChildren="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.AppBarLayout
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/app_bar"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:clipChildren="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingtoolbar"
                android:fitsSystemWindows="true"
                android:clipChildren="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
                app:contentScrim="@color/transparent"
                app:statusBarScrim="@color/transparent">

                <FrameLayout
                    android:id="@+id/layout_header"
                    android:paddingTop="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="?actionBarSize"
                    app:layout_scrollFlags="enterAlwaysCollapsed|scroll">

                    <include layout="@layout/activity_tag_base_layout_header" />
                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/actionBar"
                    android:layout_width="fill_parent"
                    android:layout_height="?actionBarSize"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:layout_collapseMode="pin">

                    <include layout="@layout/tag_tool_bar" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_horizon_line"
                android:showDividers="end|middle"
                android:visibility="gone">

                <FrameLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:layout_marginLeft="10.0dip">

                        <TextView
                            android:gravity="center|left"
                            android:layout_gravity="left"
                            android:id="@+id/tv_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="综合排序"
                            android:drawableRight="@drawable/icon_filter_down_un_arrow"
                            android:drawablePadding="10.0dip"
                            style="@style/TextNormal" />
                    </LinearLayout>

                    <android.support.design.widget.TabLayout
                        android:layout_gravity="bottom|center|right"
                        android:id="@+id/tablayout"
                        android:layout_width="wrap_content"
                        android:layout_height="45.0dip"
                        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                        app:tabTextColor="@color/base_gray60"
                        app:tabSelectedTextColor="@color/base_red" />
                </FrameLayout>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <TextView
            android:textAppearance="@style/TextMedium.White"
            android:gravity="center_vertical"
            android:id="@+id/view_participate"
            android:background="@drawable/bg_round_red_big"
            android:paddingLeft="40.0dip"
            android:paddingRight="40.0dip"
            android:layout_width="wrap_content"
            android:layout_height="42.0dip"
            android:layout_marginBottom="16.0dip"
            android:text="@string/tag_post_note_now"
            android:drawableLeft="@drawable/index_icon_camera"
            android:drawablePadding="6.0dip"
            app:layout_behavior="com.xingin.xhs.widget.BottomScrollBehavior"
            app:layout_anchor="@id/container"
            app:layout_anchorGravity="bottom|center" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.SwipeRefreshLayout>