<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:background="@color/trans_black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_gravity="bottom|center"
        android:layout_width="70.0dip"
        android:layout_height="50.0dip" />

    <ImageView
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26.0dip"
        android:src="@drawable/guide_finger_icon_bottom" />

    <LinearLayout
        android:layout_gravity="bottom|center|right"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0.0dip"
        android:layout_marginBottom="90.0dip">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="5.0"
            style="@style/GuideWhiteStyle">

            <TextView
                android:layout_gravity="center_vertical"
                android:paddingRight="4.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/guide_click_store"
                android:layout_weight="3.6"
                style="@style/TextMedium" />

            <View
                android:background="@color/line_color"
                android:layout_width="0.6dip"
                android:layout_height="32.0dip" />

            <TextView
                android:layout_gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/tip_i_know"
                android:layout_weight="1.3"
                style="@style/TextMedium.Red" />
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_arrow_bottom_left" />
    </LinearLayout>
</FrameLayout>