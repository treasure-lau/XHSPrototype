<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_nomal"
        android:layout_marginRight="@dimen/margin_nomal"
        android:layout_marginBottom="10.0dip"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_nomal"
        android:layout_marginRight="@dimen/margin_nomal">

        <Button
            android:textSize="@dimen/text_big"
            android:textColor="@color/bottom_dialog_normal"
            android:id="@+id/btn_cancel"
            android:background="@drawable/common_whole_round"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:text="@string/common_btn_canal" />
    </LinearLayout>
</LinearLayout>