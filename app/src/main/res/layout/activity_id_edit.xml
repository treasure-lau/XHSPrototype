<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:textAppearance="@style/TextSmall.Gray60"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_red_id_tips" />

    <EditText
        android:textAppearance="@style/TextNormal"
        android:gravity="center|left|top"
        android:id="@+id/et_desc"
        android:background="@color/white"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLength="15"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_" />

    <TextView
        android:textAppearance="@style/TextSmall.Gray60"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/red_id_guide" />
</LinearLayout>