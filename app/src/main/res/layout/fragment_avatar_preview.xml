<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@color/trans_black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/avatar_act_layout"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_avatar_select_pic"
            android:background="@drawable/corner_white_btn_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="更换头像" />

        <Button
            android:id="@+id/btn_avatar_cancel"
            android:background="@drawable/corner_white_btn_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="取消" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/avatar_act_layout">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_avatar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/user_default_ic_large"/>
    </FrameLayout>
</RelativeLayout>