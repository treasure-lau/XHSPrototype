<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:padding="6.0dip"
    android:layout_width="fill_parent"
    android:layout_height="42.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/layout_wrapper"
        android:background="@drawable/bg_transparent_round"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon_dark"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_toRightOf="@id/image_1"
            android:layout_centerVertical="true"
            style="@style/TextNormal.Gray60" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/cancel_icon"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true" />

        <EditText
            android:textColor="@color/base_black"
            android:textColorHint="@color/base_gray60"
            android:id="@+id/text"
            android:background="@null"
            android:paddingLeft="6.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/btn_delete"
            android:layout_toRightOf="@id/text_1"
            android:inputType="text"
            android:imeOptions="actionSearch"
            style="@style/TextNormal" />
    </RelativeLayout>
</FrameLayout>