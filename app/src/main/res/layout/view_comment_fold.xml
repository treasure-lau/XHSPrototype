<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView
        android:id="@+id/list_view"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:listSelector="@android:color/transparent" />

    <FrameLayout
        android:id="@+id/comment_fold_fl_bottom_fold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/fold_or_expand_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimension_10">

            <TextView
                android:id="@+id/tv_fold_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSmall.Gray60" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_fold_image"
                android:layout_width="10.0dip"
                android:layout_height="6.0dip"
                android:layout_marginLeft="6.0dip"
                android:src="@drawable/ic_note_hide_arrow"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>