<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:tag="layout/item_msg_activities_banner_0"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/banner"
        android:background="@color/white"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/b_title"
            android:tag="binding_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_alignParentLeft="true"
            style="@style/TextNormal" />

        <ImageView
            android:id="@+id/b_close"
            android:tag="binding_2"
            android:background="@drawable/banner_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/b_content"
            android:tag="binding_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_10"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@id/b_detail"
            android:layout_below="@id/b_title"
            android:layout_alignLeft="@id/b_title"
            style="@style/TextSmall.Gray40" />

        <TextView
            android:id="@+id/b_detail"
            android:tag="binding_4"
            android:background="@drawable/bg_banner_button"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/b_close"
            android:layout_alignParentBottom="true"
            style="@style/TextSmall.White" />
    </RelativeLayout>

    <View
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimension_10"
        android:layout_below="@id/banner"
        android:layout_alignParentBottom="true" />
</RelativeLayout>