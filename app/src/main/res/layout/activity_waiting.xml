<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.view.ScaleLayout
        android:id="@+id/scaleLayout"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100.0dip"
        app:scaleProvideX="300.0"
        app:scaleProvideY="230.0">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:clipChildren="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90.0dip"
            android:layout_marginRight="90.0dip" />
    </com.xingin.xhs.view.ScaleLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/firstRL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:layout_below="@id/scaleLayout">

        <TextView
            android:textSize="18.0sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="18.0sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ad2"
            android:paddingLeft="10.0dip"
            android:paddingTop="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="@string/waiting2"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/nullLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/endRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:layout_below="@id/scaleLayout">

        <TextView
            android:textSize="18.0sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waited"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</RelativeLayout>