<?xml version="1.0" encoding="utf-8"?>
<com.xingin.xhs.view.ScaleLayout android:orientation="vertical"
    android:paddingBottom="12.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:scaleProvideX="100.0"
    app:scaleProvideY="100.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/img_icon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        app:placeholderImage="@color/base_bg_gray"
        app:failureImage="@color/base_bg_gray"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="6.0dip" />

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/tv_title"
        android:background="@drawable/xyvg_tag_mask"
        android:paddingLeft="4.0dip"
        android:paddingTop="2.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="2.0dip"
        android:layout_width="76.0dip"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_alignLeft="@id/img_icon"
        android:layout_alignTop="@id/img_icon"
        android:layout_alignRight="@id/img_icon" />
</com.xingin.xhs.view.ScaleLayout>