<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/trans_black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_gravity="left"
        android:background="@color/white"
        android:layout_width="107.0dip"
        android:layout_height="29.0dip"
        android:layout_marginTop="83.0dip" />

    <ImageView
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30.0dip"
        android:src="@drawable/guide_finger_icon" />

    <ImageView
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="60.0dip"
        android:src="@drawable/guide_arrow_white_top_right" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="5.0"
        style="@style/GuideWhiteStyle">

        <TextView
            android:paddingRight="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/tip_modify_info"
            android:layout_weight="3.7"
            style="@style/TextMedium" />

        <View
            android:background="@color/line_color"
            android:layout_width="0.6dip"
            android:layout_height="32.0dip" />

        <TextView
            android:layout_gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/tip_i_know"
            android:layout_weight="1.1"
            style="@style/TextMedium.Red" />
    </LinearLayout>
</LinearLayout>