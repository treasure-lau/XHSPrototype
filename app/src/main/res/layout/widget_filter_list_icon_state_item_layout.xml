<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textColor="@color/filter_text_selector"
        android:gravity="center_vertical"
        android:id="@+id/filters_name"
        android:background="@drawable/bg_transparent"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:text="--"
        android:drawableRight="@drawable/filter_checked_drawable" />

    <View
        android:id="@+id/short_diver"
        android:background="@color/smssdk_lv_item_divider"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="20.0dip" />

    <View
        android:id="@+id/long_diver"
        android:background="@color/smssdk_lv_item_divider"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
</LinearLayout>