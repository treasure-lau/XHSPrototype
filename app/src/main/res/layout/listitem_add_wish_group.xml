<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:id="@+id/id_content_view"
    android:background="@drawable/common_white_to_gray"
    android:paddingTop="12.0dip"
    android:paddingBottom="12.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_wish_icon"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginLeft="14.0dip"
        app:placeholderImage="@color/base_gray96"
        app:failureImage="@color/base_gray96" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_gray"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_wish_content"
        android:paddingRight="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:drawableRight="@drawable/icon_arrow" />
</LinearLayout>