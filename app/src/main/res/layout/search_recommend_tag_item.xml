<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_recommend_tag"
    android:background="@drawable/common_white_to_gray"
    android:padding="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.0dip"
    android:layout_marginBottom="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv"
        android:layout_width="68.0dip"
        android:layout_height="68.0dip"
        android:layout_marginRight="10.0dip"
        app:roundedCornerRadius="4.0dip" />

    <TextView
        android:textAppearance="@style/Text15Size"
        android:textStyle="bold"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_tag_hash"
        android:drawablePadding="5.0dip"
        android:layout_toRightOf="@id/iv" />

    <TextView
        android:textAppearance="@style/TextSmall.Gray40"
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title" />

    <TextView
        android:textAppearance="@style/TextSmall.Gray40"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_below="@id/tv_desc"
        android:layout_alignLeft="@id/tv_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>