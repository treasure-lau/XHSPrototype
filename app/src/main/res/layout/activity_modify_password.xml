<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:paddingLeft="30.0dip"
    android:paddingRight="30.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/bg_round_gray80_border"
        android:layout_marginTop="50.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColorHint="@color/base_gray80"
            android:id="@+id/et_original_password"
            android:background="@null"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:hint="@string/add_original_password"
            android:singleLine="true"
            android:maxLength="26"
            android:inputType="textPassword"
            style="@style/TextNormal.Gray40" />

        <View
            android:id="@+id/spit_view1"
            android:background="@color/base_gray80"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/et_original_password" />

        <EditText
            android:textColorHint="@color/base_gray80"
            android:id="@+id/et_new_password"
            android:background="@null"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:hint="@string/add_new_password"
            android:singleLine="true"
            android:maxLength="26"
            android:layout_below="@id/spit_view1"
            android:inputType="textPassword"
            style="@style/TextNormal.Gray40" />
        <View
            android:id="@+id/spit_view2"
            android:background="@color/base_gray80"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/et_new_password" />

        <EditText
            android:textColorHint="@color/base_gray80"
            android:id="@+id/et_re_new_password"
            android:background="@null"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:hint="@string/add_re_new_password"
            android:singleLine="true"
            android:maxLength="26"
            android:layout_below="@id/spit_view2"
            android:inputType="textPassword"
            style="@style/TextNormal.Gray40" />
    </RelativeLayout>

    <Button
        android:gravity="center"
        android:id="@+id/btn_finish"
        android:background="@drawable/btn_ic_finish"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginTop="@dimen/margin_big"
        android:text="@string/finish"
        style="@style/TextMedium.White" />

</LinearLayout>