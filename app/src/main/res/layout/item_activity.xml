<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:tag="layout/item_activity_0"
    android:background="@android:color/white"
    android:paddingLeft="16.0dip"
    android:paddingTop="0.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/ll_time"
        android:tag="binding_1"
        android:paddingTop="0.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/base_gray80"
            android:layout_width="fill_parent"
            android:layout_height="0.6dip" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_time_text"
            android:tag="binding_2"
            android:background="@android:color/white"
            android:paddingLeft="14.0dip"
            android:paddingRight="14.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextNormal.Gray80" />
    </FrameLayout>

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/image"
        android:tag="binding_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1.91"
        app:placeholderImage="@color/base_bg_gray"
        app:failureImage="@color/base_bg_gray"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="4.0dip" />
</LinearLayout>