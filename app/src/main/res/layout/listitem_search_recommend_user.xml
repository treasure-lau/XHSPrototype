<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:orientation="vertical"
        android:id="@+id/tag_rl"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/image_avatar"
            android:layout_height="@dimen/image_avatar"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_eight"
                android:singleLine="true"
                style="@style/TextNormal.Gray40" />

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_eight"
                android:layout_marginTop="2.0dip"
                android:singleLine="true"
                style="@style/TextSmall.Gray80" />
        </LinearLayout>

        <TextView
            android:textSize="@dimen/text_12"
            android:textColor="@color/btn_follow_text_color"
            android:gravity="center"
            android:id="@+id/btn_follow"
            android:background="@drawable/btn_follow_selector"
            android:paddingLeft="@dimen/margin_nomal"
            android:paddingTop="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="72.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <View
            android:id="@+id/divide_view"
            style="@style/InsetDividerStyle" />
    </RelativeLayout>
</FrameLayout>