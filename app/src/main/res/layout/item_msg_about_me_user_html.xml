<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:tag="layout/item_msg_about_me_user_html_0"
    android:background="@drawable/common_white_to_gray"
    android:paddingLeft="@dimen/dimension_15"
    android:paddingTop="@dimen/dimension_15"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.AvatarImageView
        android:id="@+id/iv_avatar"
        android:tag="binding_1"
        android:layout_width="35.0dip"
        android:layout_height="35.0dip"
        app:roundAsCircle="true" />

    <ImageView
        android:id="@+id/iv_follow"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimension_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:textSize="12.0sp"
        android:id="@+id/tv_msg_about_me_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimension_15"
        android:layout_marginTop="2.0dip"
        android:layout_marginRight="@dimen/dimension_15"
        android:layout_toLeftOf="@id/iv_follow"
        android:layout_toRightOf="@id/iv_avatar" />

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/base_gray60"
        android:id="@+id/tv_msg_about_me_description"
        android:tag="binding_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimension_10"
        android:layout_below="@id/tv_msg_about_me_title"
        android:layout_alignLeft="@id/tv_msg_about_me_title" />

    <View
        android:tag="binding_4"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="@dimen/dimension_15"
        android:layout_below="@id/tv_msg_about_me_description"
        android:layout_alignLeft="@id/tv_msg_about_me_title"
        android:layout_alignParentBottom="true" />

    <View
        android:tag="binding_5"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="@dimen/dimension_15"
        android:layout_below="@id/tv_msg_about_me_description"
        android:layout_alignParentBottom="true" />
</RelativeLayout>