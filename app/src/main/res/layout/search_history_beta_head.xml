    <TextView
        android:layout_gravity="left"
        android:id="@+id/text_1"
        android:paddingLeft="16.0dip"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
