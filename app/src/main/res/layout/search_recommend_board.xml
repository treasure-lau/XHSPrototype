<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/common_white_to_gray"
    android:paddingLeft="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_board"
        android:paddingTop="15.0dip"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/image_1"
            android:padding="2.0dip"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_alignParentLeft="true"
            app:placeholderImage="@color/background"
            app:failureImage="@color/background"
            app:roundWithOverlayColor="@color/white" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/image_2"
            android:background="@color/white"
            android:padding="2.0dip"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginLeft="23.0dip"
            android:layout_alignParentLeft="true"
            app:placeholderImage="@color/background"
            app:failureImage="@color/background" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/image_3"
            android:background="@color/white"
            android:padding="2.0dip"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginLeft="46.0dip"
            android:layout_alignParentLeft="true"
            app:placeholderImage="@color/background"
            app:failureImage="@color/background" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/arrow_icon_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:gravity="left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_toLeftOf="@id/iv_arrow"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:textAppearance="@style/TextNormal"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <TextView
                android:textAppearance="@style/TextSmall.Gray60"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/base_gray90"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
</LinearLayout>