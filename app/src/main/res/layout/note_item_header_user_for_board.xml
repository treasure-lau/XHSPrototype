<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="12.0dip" />

    <FrameLayout
        android:id="@+id/layout_reason"
        android:background="@color/white"
        android:paddingLeft="16.0dip"
        android:paddingTop="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="6.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fav_user_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/TextSmall.Gray60" />

        <ImageView
            android:layout_gravity="left"
            android:layout_width="14.0dip"
            android:layout_height="11.0dip"
            android:layout_marginTop="24.0dip"
            android:src="@drawable/ic_dot_left" />

        <TextView
            android:id="@+id/fav_reason"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="24.0dip"
            android:layout_marginTop="24.0dip"
            android:lineSpacingExtra="3.0dip"
            style="@style/TextNormal.Gray40" />
    </FrameLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/user_layout"
        android:background="@color/white"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="10.0dip" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_centerVertical="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_red_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                style="@style/TextSmall.Gray60" />
        </LinearLayout>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/TextSmall.Gray60" />
    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
</LinearLayout>