<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:background="@color/trans_black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_gravity="left"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="140.0dip" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="200.0dip">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_finger_icon" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:src="@drawable/guide_arrow_white_top_right" />

        <LinearLayout
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:id="@+id/info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:weightSum="5.0"
            style="@style/GuideWhiteStyle">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_text_desc"
                android:paddingRight="4.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/tip_guide_click_note_tags"
                android:layout_weight="4.0"
                style="@style/TextMedium" />

            <View
                android:background="@color/line_color"
                android:layout_width="0.6dip"
                android:layout_height="32.0dip" />

            <TextView
                android:layout_gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/tip_i_know"
                android:layout_weight="1.0"
                style="@style/TextMedium.Red" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>