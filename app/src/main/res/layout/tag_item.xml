<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:id="@+id/layout_tag"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/image"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_centerVertical="true"
        app:placeholderImage="@color/base_bg_gray"
        app:failureImage="@color/base_bg_gray"
        app:actualImageScaleType="fitXY"
        app:roundedCornerRadius="6.0dip" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_toRightOf="@id/image"
        android:layout_centerVertical="true">

        <TextView
            android:textAppearance="@style/TextNormal"
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextNormal.Gray60"
            android:id="@+id/dec_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.0dip"
        android:src="@drawable/icon_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:background="@color/line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.30000007dip"
        android:layout_alignParentBottom="true" />
</RelativeLayout>