<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/base_bg_gray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/logo"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_banner"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/versionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_below="@id/iv_logo"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_line"
        android:layout_below="@id/logo"
        android:showDividers="middle|beginning">

        <TextView
            android:id="@+id/check_version"
            android:background="@drawable/common_white_to_gray"
            android:paddingLeft="16.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:drawableRight="@drawable/icon_arrow"
            style="@style/TextNormal" />

        <TextView
            android:id="@+id/bbsRuleTv"
            android:background="@drawable/common_white_to_gray"
            android:paddingLeft="16.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="社区规范"
            android:drawableRight="@drawable/icon_arrow"
            style="@style/TextNormal" />

        <TextView
            android:id="@+id/TOSTv"
            android:background="@drawable/common_white_to_gray"
            android:paddingLeft="16.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="服务条款"
            android:drawableRight="@drawable/icon_arrow"
            style="@style/TextNormal" />

        <TextView
            android:id="@+id/privacyPolicyTv"
            android:background="@drawable/common_white_to_gray"
            android:paddingLeft="16.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:drawableRight="@drawable/icon_arrow"
            style="@style/TextNormal" />

        <TextView
            android:id="@+id/net_ping"
            android:background="@drawable/common_white_to_gray"
            android:paddingLeft="16.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/net_diagnosis"
            android:visibility="gone"
            android:drawableRight="@drawable/icon_arrow"
            style="@style/TextNormal" />

        <include layout="@layout/ic_simple_line" />
    </LinearLayout>

    <TextView
        android:textSize="12.0sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.0dip"
        android:text="行吟信息科技 版权所有\nCopyright@2013-2016 Xingin. All Rights Reserved"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        style="@style/TextNormal.Gray80" />
</RelativeLayout>