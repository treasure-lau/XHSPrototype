<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/container_recommend_vendor_item"
    android:layout_width="@dimen/dimension_90"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimension_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv_vendor"
        android:background="@color/white"
        android:padding="2.0dip"
        android:layout_width="@dimen/dimension_90"
        android:layout_height="@dimen/dimension_45"
        fresco:placeholderImage="@color/background"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundedCornerRadius="@dimen/base_radius_round_image" />

    <TextView
        android:textSize="@dimen/text_micro"
        android:textColor="@color/base_black"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimension_5"
        android:layout_marginTop="@dimen/dimension_5"
        android:layout_marginRight="@dimen/dimension_5"
        android:maxLines="2" />
</LinearLayout>