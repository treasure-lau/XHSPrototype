<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/ly_parent"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingLeft="12.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/icon_history"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="@dimen/margin_litte"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/brand_title_select"
            android:ellipsize="end"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:singleLine="true"
            android:layout_toRightOf="@id/icon_history"
            android:layout_alignTop="@id/icon_history" />

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/base_white_gray"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_toRightOf="@id/icon_history"
            android:layout_below="@id/tv_name" />

        <TextView
            android:textSize="@dimen/text_12"
            android:textColor="@color/btn_follow_text_color"
            android:gravity="center"
            android:id="@+id/btn_follow"
            android:background="@drawable/btn_follow_selector"
            android:paddingLeft="@dimen/margin_nomal"
            android:paddingTop="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="72.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/divide_view"
        style="@style/InsetDividerStyle" />
</LinearLayout>