<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="30.0dip"
    android:layout_marginRight="30.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/base_bg_gray"
        android:paddingTop="28.0dip"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xyvg_popup_review" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_title"
            android:padding="12.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLarge" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_message"
            android:padding="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextNormal.ShallowBlack" />
    </LinearLayout>

    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/light_blue"
        android:gravity="center"
        android:id="@+id/dialog_tv_ok"
        android:background="@drawable/common_white_to_gray"
        android:padding="12.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/spit_view_below_ok"
        android:background="@color/base_deep_gray"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip" />

    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/light_blue"
        android:gravity="center"
        android:id="@+id/dialog_tv_neutral"
        android:background="@drawable/common_white_to_gray"
        android:padding="12.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/spit_view_below_neutral"
        android:background="@color/base_deep_gray"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip" />

    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/light_blue"
        android:gravity="center"
        android:id="@+id/dialog_tv_cancel"
        android:background="@drawable/common_white_to_gray"
        android:padding="12.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>