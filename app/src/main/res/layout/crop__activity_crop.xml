<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/done_cancel_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/crop__bar_height"
        android:layout_alignParentBottom="true"
        layout="@layout/crop__layout_done_cancel" />

    <com.soundcloud.android.crop.CropImageView
        android:id="@+id/crop_image"
        android:background="#ccffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/done_cancel_bar" />

    <ImageView
        android:id="@+id/guide_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:src="@drawable/post_coachmarks_crop"
        android:layout_alignBottom="@id/crop_image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>