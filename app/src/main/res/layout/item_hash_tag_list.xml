<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    android:paddingLeft="15.0dip"
    android:paddingTop="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        app:placeholderImage="@color/base_bg_gray"
        app:failureImage="@color/base_bg_gray"
        app:roundedCornerRadius="0.0dip"
        app:roundingBorderWidth="1.0px"
        app:roundingBorderColor="@color/base_gray90" />

    <TextView
        android:textColor="@color/base_gray60"
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="15.0dip"
        android:lines="1"
        android:includeFontPadding="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_type"
        android:layout_toRightOf="@id/iv"
        android:layout_centerVertical="true">

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/base_gray"
            android:ellipsize="end"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1" />

        <TextView
            android:textSize="@dimen/text_10_size"
            android:textColor="@color/base_gray60"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:lines="1" />
    </LinearLayout>

    <View
        android:id="@+id/diver"
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_below="@id/iv" />
</RelativeLayout>