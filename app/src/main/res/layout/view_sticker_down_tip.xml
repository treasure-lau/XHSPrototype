<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_sticker_popup"
    android:layout_width="300.0dip"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip">

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/base_shallow_red"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/base_shallow_black"
            android:layout_gravity="bottom|center|right"
            android:id="@+id/tv_xianliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/base_gray"
        android:ellipsize="end"
        android:id="@+id/tv_desc"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="12.0dip"
        android:maxLines="3" />

    <com.xingin.xhs.widget.XYImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:layout_width="300.0dip"
        android:layout_height="300.0dip" />

    <Button
        android:textSize="16.0sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button"
        android:background="@drawable/bg_sticker_popup_button"
        android:paddingLeft="60.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="60.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="20.0dip"
        android:text="@string/common_btn_enter" />
</LinearLayout>