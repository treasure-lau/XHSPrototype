<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:background="@color/white"
        android:paddingLeft="10.0dip"
        android:paddingTop="30.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">

        <TextView
            android:layout_gravity="center|left"
            android:id="@+id/my_note_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myprofile_text_fav"
            android:layout_centerVertical="true"
            style="@style/TextBig" />

        <TextView
            android:layout_gravity="center|right"
            android:id="@+id/board_see_all"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myprofile_text_look_all"
            android:layout_alignParentRight="true"
            style="@style/TextSmall.Gray60" />
    </FrameLayout>
</FrameLayout>