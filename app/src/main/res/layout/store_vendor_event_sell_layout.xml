<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_round_gray80_border"
        android:paddingTop="15.0dip"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginRight="15.0dip">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="只坐头等舱的她们也挑不出刺来"
            style="@style/TextNormal" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:text="高端护肤专场"
            style="@style/TextSmall.Gray60" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/goods_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/base_bg_gray"
                app:failureImage="@color/base_bg_gray"
                app:actualImageScaleType="centerCrop"
                app:roundedCornerRadius="4.0dip" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/base_bg_gray"
                app:failureImage="@color/base_bg_gray"
                app:actualImageScaleType="centerCrop"
                app:roundedCornerRadius="4.0dip" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/base_bg_gray"
                app:failureImage="@color/base_bg_gray"
                app:actualImageScaleType="centerCrop"
                app:roundedCornerRadius="4.0dip" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/base_bg_gray"
                app:failureImage="@color/base_bg_gray"
                app:actualImageScaleType="centerCrop"
                app:roundedCornerRadius="4.0dip" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>