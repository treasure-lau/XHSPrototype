<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="@color/base_gray80"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_marginLeft="12.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="10.0dip">

        <FrameLayout
            android:id="@+id/avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:layout_marginBottom="12.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <com.xingin.xhs.widget.AvatarImageView
                android:id="@+id/iv_avatar"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_marginTop="9.0dip"
                android:layout_marginRight="9.0dip" />

            <TextView
                android:typeface="monospace"
                android:gravity="center"
                android:layout_gravity="center|right|top"
                android:id="@+id/tv_number"
                android:background="@drawable/bg_red_dot"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                style="@style/TextSmall.White" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.0dip"
            android:layout_alignTop="@id/avatar_layout"
            android:layout_alignParentRight="true"
            style="@style/TextNormal.Gray60" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginTop="9.0dip"
            android:layout_toLeftOf="@id/tv_time"
            android:layout_toRightOf="@id/avatar_layout"
            android:layout_alignTop="@id/avatar_layout"
            style="@style/TextNormal" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:singleLine="true"
            android:layout_toLeftOf="@id/tv_time"
            android:layout_below="@id/tv_title"
            android:layout_alignLeft="@id/tv_title"
            style="@style/TextSmall.Gray60" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:background="@color/base_gray80"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip" />
</LinearLayout>