<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:paddingLeft="10.0dip"
    android:paddingTop="8.0dip"
    android:paddingRight="10.0dip"
    android:paddingBottom="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_event_sale"
        android:background="@drawable/bg_white_round_gray90_border"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/TextNormal"
            android:id="@+id/tv_name"
            android:paddingLeft="16.0dip"
            android:paddingTop="20.0dip"
            android:paddingRight="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextSmall.Gray60"
            android:id="@+id/tv_desc"
            android:paddingLeft="16.0dip"
            android:paddingTop="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="4.0">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_1"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/background"
                app:failureImage="@color/background"
                app:backgroundImage="@color/background"
                app:roundedCornerRadius="2.0dip" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_2"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/background"
                app:failureImage="@color/background"
                app:backgroundImage="@color/background"
                app:roundedCornerRadius="2.0dip" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_3"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/background"
                app:failureImage="@color/background"
                app:backgroundImage="@color/background"
                app:roundedCornerRadius="2.0dip" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/image_4"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_weight="1.0"
                app:viewAspectRatio="1.0"
                app:placeholderImage="@color/background"
                app:failureImage="@color/background"
                app:backgroundImage="@color/background"
                app:roundedCornerRadius="2.0dip" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>