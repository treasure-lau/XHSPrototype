<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/recom_note_layout"
        android:background="@drawable/bg_transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_toLeftOf="@id/icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:gravity="left"
                android:id="@+id/name_tv1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="新鲜笔记"
                style="@style/TextNormal" />

            <TextView
                android:gravity="left"
                android:id="@+id/english_name_tv1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="new notes"
                style="@style/TextSmall.Gray80" />
        </LinearLayout>

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/icon1"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginBottom="16.0dip"
            android:src="@drawable/ic_more_note"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:roundedCornerRadius="8.0dip"
            app:roundingBorderWidth="1.0dip"
            app:roundingBorderColor="@color/red" />
    </RelativeLayout>

    <View
        android:id="@+id/spit_line"
        android:background="@color/base_light_blue"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/recom_user_layout"
        android:background="@drawable/bg_transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_toLeftOf="@id/icon2"
            android:layout_centerVertical="true">

            <TextView
                android:gravity="left"
                android:id="@+id/name_tv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="推荐用户"
                style="@style/TextNormal" />

            <TextView
                android:gravity="left"
                android:id="@+id/english_name_tv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="hot bloggers"
                style="@style/TextSmall.Gray80" />
        </LinearLayout>

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/icon2"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginBottom="16.0dip"
            android:src="@drawable/ic_more_note"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:roundedCornerRadius="8.0dip"
            app:roundingBorderWidth="1.0dip"
            app:roundingBorderColor="@color/red" />
    </RelativeLayout>
</LinearLayout>