<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_ffffff_button"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip">

        <TextView
            android:layout_gravity="left"
            android:id="@+id/tv_sys_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sys_msg"
            style="@style/TextNormal" />

        <View
            android:background="@color/base_white_black"
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/stars_ratingbar_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1.0"
                android:layout_alignParentLeft="true"
                style="@style/EvaluateRatingBarBig" />

            <RatingBar
                android:id="@+id/stars_ratingbar_small"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1.0"
                android:isIndicator="true"
                android:layout_alignParentLeft="true"
                style="@style/EvaluateRatingBarSmall" />

            <TextView
                android:id="@+id/stars_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="@string/evaluate_please"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/btn_submit"
                android:background="@drawable/common_bg_round_red_deep"
                android:paddingLeft="20.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/smssdk_submit"
                android:layout_below="@id/stars_level"
                android:layout_alignParentRight="true"
                style="@style/TextMedium.White" />

            <TextView
                android:id="@+id/btn_submit_msg"
                android:background="@drawable/common_bg_round_yellow"
                android:paddingLeft="20.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="5.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/feed_stay"
                android:layout_below="@id/stars_level"
                android:layout_alignParentRight="true"
                style="@style/TextMedium.White" />
        </RelativeLayout>

        <TextView
            android:id="@+id/feed_content"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="--"
            style="@style/TextSmall.Gray60" />
    </LinearLayout>
</LinearLayout>