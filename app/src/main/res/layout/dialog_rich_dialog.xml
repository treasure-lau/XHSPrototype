<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_content"
        android:background="@drawable/common_bg_round_white"
        android:paddingBottom="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34.0dip"
        android:layout_marginBottom="20.0dip">

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/image_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextSmall"
            android:id="@+id/text_1"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2.0dip" />
    </LinearLayout>

    <TextView
        android:textAppearance="@style/TextNormal.White"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:id="@+id/btn_ok"
        android:background="@drawable/bg_round_red_big"
        android:paddingLeft="30.0dip"
        android:paddingRight="30.0dip"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:layout_alignBottom="@id/layout_content" />

    <com.xingin.xhs.widget.XYImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_avatar"
        android:visibility="gone"
        android:layout_width="68.0dip"
        android:layout_height="68.0dip" />
</FrameLayout>