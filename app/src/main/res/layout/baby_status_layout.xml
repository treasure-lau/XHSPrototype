<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/ic_header"
        layout="@layout/ic_header" />

    <TextView
        android:textSize="@dimen/text_14"
        android:textColor="@color/base_gray"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:text="@string/profile_baby_desc" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60.0dip">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/prepare_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_prepare"
                android:background="@drawable/is_prepare_ing_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_14"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_prepare"
                android:background="@drawable/bg_tv_baby_status_select"
                android:paddingLeft="14.0dip"
                android:paddingTop="7.0dip"
                android:paddingRight="14.0dip"
                android:paddingBottom="7.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="@string/profile_baby_is_prepare" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/pregnancy_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip">

            <ImageView
                android:id="@+id/iv_pregnancy"
                android:background="@drawable/is_pregnancy_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_14"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_pregnancy"
                android:background="@drawable/bg_tv_baby_status_select"
                android:paddingLeft="14.0dip"
                android:paddingTop="7.0dip"
                android:paddingRight="14.0dip"
                android:paddingBottom="7.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="@string/profile_baby_is_pregnancy" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/baby_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_baby"
                android:background="@drawable/has_baby_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_14"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_baby"
                android:background="@drawable/bg_tv_baby_status_select"
                android:paddingLeft="14.0dip"
                android:paddingTop="7.0dip"
                android:paddingRight="14.0dip"
                android:paddingBottom="7.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="@string/profile_baby_has_baby" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textSize="@dimen/text_14"
        android:textColor="@color/base_gray"
        android:id="@+id/tv_data"
        android:background="@drawable/bg_all_good"
        android:paddingLeft="20.0dip"
        android:paddingTop="14.0dip"
        android:paddingRight="14.0dip"
        android:paddingBottom="14.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="47.0dip"
        android:drawableRight="@drawable/ic_bottom_arrow" />
</LinearLayout>