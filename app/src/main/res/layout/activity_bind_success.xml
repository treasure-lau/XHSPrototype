<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/ic_header"
        layout="@layout/ic_header" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:textSize="24.0sp"
            android:textColor="@color/base_gray"
            android:id="@+id/bind_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bind_success_tips"
            android:layout_centerHorizontal="true" />

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/bind_avatar"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_below="@id/bind_success_title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/base_shallow_black"
            android:id="@+id/bind_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_below="@id/bind_avatar"
            android:layout_centerHorizontal="true" />

        <Button
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:id="@+id/bindsuccess_button"
            android:background="@drawable/green_button"
            android:paddingTop="6.0dip"
            android:paddingBottom="6.0dip"
            android:layout_width="180.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="80.0dip"
            android:layout_marginRight="16.0dip"
            android:text="@string/common_btn_enter"
            android:layout_below="@id/bind_name"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>