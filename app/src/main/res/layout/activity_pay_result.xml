<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/header_back"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:drawableLeft="@drawable/common_head_btn_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bill_success_ic"
                android:padding="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/btn_bill_success"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:textSize="32.0sp"
                android:textStyle="bold"
                android:textColor="@color/pay_height_color"
                android:id="@+id/success_title"
                android:paddingTop="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_success_title"
                android:layout_toRightOf="@id/bill_success_ic" />

            <TextView
                android:textSize="17.0sp"
                android:textStyle="bold"
                android:textColor="@color/base_shallow_black"
                android:paddingTop="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_success_thank"
                android:layout_toRightOf="@id/bill_success_ic"
                android:layout_below="@id/success_title" />
        </RelativeLayout>

        <View
            android:background="@drawable/bill_partion_repeat"
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:layout_marginTop="30.0dip" />

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/base_shallow_black"
            android:gravity="center_horizontal"
            android:id="@+id/order_id"
            android:paddingTop="20.0dip"
            android:paddingBottom="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_id_str" />

        <View
            android:background="@drawable/bill_partion_repeat"
            android:layout_width="fill_parent"
            android:layout_height="2.0dip" />

        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/base_shallow_black"
            android:id="@+id/order_info"
            android:paddingTop="30.0dip"
            android:paddingBottom="30.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/o_info_str" />

        <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button"
            android:background="@drawable/green_button"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/common_btn_enter" />
    </LinearLayout>
</LinearLayout>