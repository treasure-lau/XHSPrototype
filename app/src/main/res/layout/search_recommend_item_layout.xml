<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/bg_transparent"
    android:divider="@drawable/divider_horizon_line"
    android:showDividers="end"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingLeft="16.0dip"
        android:paddingRight="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/base_gray40"
            android:id="@+id/text"
            android:paddingTop="14.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toLeftOf="@id/right"
            android:layout_centerVertical="true"
            style="@style/TextNormal" />

        <FrameLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/right_ui"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xingin.xhs.widget.XYImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/right_icon"
                    android:layout_width="32.0dip"
                    android:layout_height="24.0dip"
                    fresco:actualImageScaleType="centerInside" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/TextSmall.Gray60" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/right_image_text"
                android:background="@drawable/bg_radiu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xingin.xhs.widget.XYImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/right_image"
                    android:paddingLeft="12.0dip"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    fresco:actualImageScaleType="centerInside" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/right_text"
                    android:paddingRight="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/TextSmall.Gray60" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>