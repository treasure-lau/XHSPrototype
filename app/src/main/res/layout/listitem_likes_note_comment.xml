<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_message"
    android:background="@drawable/common_white_to_gray"
    android:paddingTop="@dimen/margin_nomal"
    android:paddingBottom="@dimen/margin_nomal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/image_avatar"
            android:layout_height="@dimen/image_avatar"
            android:layout_marginLeft="@dimen/margin_middle"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/ly_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_toLeftOf="@id/iv_image"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_title"
                android:layout_alignParentLeft="true"
                style="@style/text_selection_name" />

            <TextView
                android:id="@+id/tv_dosth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/tv_title"
                style="@style/TextNormal.Gray60" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="3.0dip"
                android:layout_marginRight="@dimen/margin_nomal"
                android:layout_below="@id/tv_title"
                android:layout_alignParentLeft="true"
                style="@style/text_selection_tag_likes_comment_grey" />
        </RelativeLayout>

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_image"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:background="@drawable/bg_gray96_round"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="@dimen/margin_middle"
        android:text="1111"
        android:layout_below="@id/top"
        style="@style/text_selection_name" />
</RelativeLayout>