<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/trans_black_dark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginRight="32.0dip">

        <View
            android:background="@color/transparent_white"
            android:layout_width="fill_parent"
            android:layout_height="0.76dip"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:id="@+id/fl_cart"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:id="@+id/icon_cart"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:src="@drawable/post_icon_cart" />

            <TextView
                android:layout_gravity="center|left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:text="从福利社订单中选取"
                style="@style/TextNormal.White" />

            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_icon_right" />

            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/white"
                android:layout_gravity="center|right"
                android:id="@+id/show_new"
                android:background="@drawable/bg_round_red"
                android:paddingLeft="6.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="6.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="NEW" />
        </FrameLayout>

        <View
            android:background="@color/transparent_white"
            android:layout_width="fill_parent"
            android:layout_height="0.76dip"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:weightSum="5.0">

            <com.xingin.xhs.view.ClearableTextView
                android:id="@+id/brand_edit"
                android:layout_width="0.0dip"
                android:layout_height="38.0dip"
                android:layout_weight="2.0" />

            <com.xingin.xhs.view.ClearableTextView
                android:id="@+id/brand_name_edit"
                android:layout_width="0.0dip"
                android:layout_height="38.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="3.0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:weightSum="5.0">

            <com.xingin.xhs.view.ClearableTextView
                android:id="@+id/price_type_edit"
                android:layout_width="0.0dip"
                android:layout_height="38.0dip"
                android:layout_weight="2.0" />

            <com.xingin.xhs.view.RoundClearableEditView
                android:id="@+id/price_edit"
                android:layout_width="0.0dip"
                android:layout_height="38.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="3.0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:weightSum="5.0">

            <com.xingin.xhs.view.ClearableTextView
                android:id="@+id/location_type_edit"
                android:layout_width="0.0dip"
                android:layout_height="38.0dip"
                android:layout_weight="2.0" />

            <com.xingin.xhs.view.ClearableTextView
                android:id="@+id/location_edit"
                android:layout_width="0.0dip"
                android:layout_height="38.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="3.0" />
        </LinearLayout>

        <View
            android:background="@color/transparent_white"
            android:layout_width="fill_parent"
            android:layout_height="0.76dip"
            android:layout_marginTop="20.0dip"
            android:layout_alignParentTop="true" />

        <Button
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_tag_ok"
            android:background="@drawable/bg_round_red_big"
            android:layout_width="180.0dip"
            android:layout_height="38.0dip"
            android:layout_marginTop="20.0dip"
            android:text="@string/btn_finish" />

        <Button
            android:textSize="16.0sp"
            android:textColor="@color/base_gray"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_tag_cancel"
            android:background="@drawable/bg_white_round"
            android:layout_width="180.0dip"
            android:layout_height="38.0dip"
            android:layout_marginTop="20.0dip"
            android:text="@string/cancel" />
    </LinearLayout>
</FrameLayout>