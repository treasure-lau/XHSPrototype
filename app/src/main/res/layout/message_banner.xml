<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:tag="layout/message_banner_0"
    android:paddingBottom="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/banner"
        android:background="@color/white"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/b_title"
            android:tag="binding_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_alignParentLeft="true"
            style="@style/TextNormal" />

        <ImageView
            android:id="@+id/b_close"
            android:background="@drawable/banner_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/b_content"
            android:tag="binding_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_below="@id/b_title"
            android:layout_alignLeft="@id/b_title"
            style="@style/TextSmall.Gray40" />

        <Button
            android:tag="binding_3"
            android:background="@drawable/bg_banner_button"
            android:layout_width="70.0dip"
            android:layout_height="25.0dip"
            android:layout_below="@id/b_close"
            android:layout_alignRight="@id/b_close"
            style="@style/TextSmall.White" />
    </RelativeLayout>
</RelativeLayout>