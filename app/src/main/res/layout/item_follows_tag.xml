<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.osanwen.xhsprototype.widget.SquareImageView
        android:id="@+id/img_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_follow_tag" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_title"
        android:background="@drawable/recommend_tag_selected_tag"
        android:paddingTop="6.0dip"
        android:paddingBottom="6.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0.5px"
        android:layout_marginRight="0.5px"
        android:layout_marginBottom="0.5px"
        android:text="这是一个测试题目"
        android:singleLine="true"
        android:layout_alignLeft="@id/img_icon"
        android:layout_alignRight="@id/img_icon"
        android:layout_alignBottom="@id/img_icon"
        style="@style/TextNormal" />

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="6.0dip"
        android:src="@drawable/ic_select_n"
        android:layout_alignTop="@id/img_icon"
        android:layout_alignRight="@id/img_icon"
        android:visibility="gone"/>
</RelativeLayout>