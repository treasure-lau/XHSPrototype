<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/ic_header"
        layout="@layout/ic_header" />

    <RelativeLayout
        android:background="@drawable/maintain_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff768d9e"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29.0dip"
            android:layout_marginTop="68.0dip"
            android:text="红薯基地正在升级，\n薯队长正在辛勤搬砖中。"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:textSize="16.0sp"
            android:textColor="#ff9aa8b2"
            android:id="@+id/tip_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="一个小时后回来"
            android:layout_below="@id/textView"
            android:layout_alignLeft="@id/textView" />
    </RelativeLayout>
</LinearLayout>