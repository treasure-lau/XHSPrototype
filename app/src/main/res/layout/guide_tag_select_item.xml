<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="top"
    android:paddingTop="10.0dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/img_icon"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_title"
        android:background="@drawable/recommend_tag_selected_tag"
        android:paddingTop="6.0dip"
        android:paddingBottom="6.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是一个测试题目"
        android:singleLine="true"
        android:layout_alignLeft="@id/img_icon"
        android:layout_alignRight="@id/img_icon"
        android:layout_alignBottom="@id/img_icon"
        android:layout_centerHorizontal="true"
        style="@style/TextNormal" />

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="6.0dip"
        android:src="@drawable/ic_select_n_cricle"
        android:layout_alignRight="@id/img_icon"
        android:layout_alignParentTop="true" />
</RelativeLayout>