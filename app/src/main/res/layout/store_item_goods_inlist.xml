<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/layout_goods"
    android:background="@drawable/bg_top_bottom_line"
    android:paddingTop="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        style="@style/TextMedium" />

    <TextView
        android:textColor="@color/base_gray60"
        android:id="@+id/tv_desc"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        style="@style/TextSmall" />

    <View
        android:background="@color/base_gray90"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip" />

    <TextView
        android:textColor="@color/base_gray40"
        android:id="@+id/tv_desc_long"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="16.0dip"
        android:lineSpacingExtra="5.0dip" />

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="16.0dip" />

    <View
        android:background="@color/base_gray90"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip" />

    <RelativeLayout
        android:paddingLeft="16.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/base_red"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:textColor="@color/base_gray60"
            android:id="@+id/tv_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/tv_price"
            android:layout_centerVertical="true"
            style="@style/TextSmall" />

        <TextView
            android:textColor="@color/base_gray60"
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/tv_origin_price"
            android:layout_centerVertical="true"
            style="@style/TextSmall" />

        <TextView
            android:gravity="bottom"
            android:id="@+id/img_add_cart"
            android:background="@drawable/common_bg_round_red_new"
            android:paddingLeft="12.0dip"
            android:paddingTop="6.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="6.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:drawableLeft="@drawable/ic_shopping_car"
            android:drawablePadding="6.0dip"
            android:layout_alignParentRight="true"
            style="@style/TextNormal.White" />
    </RelativeLayout>
</LinearLayout>