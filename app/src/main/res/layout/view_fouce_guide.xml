<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="30.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/big_img"
        android:paddingTop="40.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xyvg_homepage_placeholder_main"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.0dip"
        android:src="@drawable/xyvg_homepage_placeholder_bubble1"
        android:layout_alignLeft="@id/big_img"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-24.0dip"
        android:layout_marginBottom="12.0dip"
        android:src="@drawable/xyvg_homepage_placeholder_bubble2"
        android:layout_alignLeft="@id/big_img"
        android:layout_alignBottom="@id/big_img" />

    <ImageView
        android:id="@+id/imageView3"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52.0dip"
        android:layout_marginRight="-24.0dip"
        android:src="@drawable/xyvg_homepage_placeholder_bubble3"
        android:layout_alignRight="@id/big_img"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37.0dip"
        android:src="@drawable/xyvg_homepage_placeholder_bubble4"
        android:layout_alignRight="@id/big_img"
        android:layout_alignBottom="@id/big_img" />

    <TextView
        android:textSize="@dimen/text_16"
        android:textColor="@color/base_white_gray"
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28.0dip"
        android:text="@string/fouce_guide_text"
        android:layout_below="@id/big_img"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/btn_add_fouce"
        android:background="@drawable/common_bg_round_yellow"
        android:paddingLeft="40.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="40.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:text="@string/fouce_now"
        android:layout_below="@id/tv_tips"
        android:layout_centerHorizontal="true"
        style="@style/TextNormal.White" />
</RelativeLayout>