<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/icon2"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_marginLeft="76.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        app:roundedCornerRadius="8.0dip"
        app:roundingBorderWidth="1.0dip"
        app:roundingBorderColor="@color/red" />

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/icon1"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_marginLeft="46.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        app:roundedCornerRadius="8.0dip"
        app:roundingBorderWidth="1.0dip" />

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/icon"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        app:roundedCornerRadius="8.0dip"
        app:roundingBorderWidth="1.0dip" />

    <TextView
        android:textSize="@dimen/text_14"
        android:textColor="@color/base_gray"
        android:id="@+id/name_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:drawableRight="@drawable/arrow_icon_right"
        android:layout_toRightOf="@id/icon2"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/line"
        android:background="@color/base_gray80"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_alignParentBottom="true" />
</RelativeLayout>