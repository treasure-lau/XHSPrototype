<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="5.0dip"
    android:paddingRight="5.0dip"
    android:layout_width="130.0dip"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/common_bg_round_white_small"
        android:paddingLeft="6.0dip"
        android:paddingTop="36.0dip"
        android:paddingRight="6.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip">

        <TextView
            android:textAppearance="@style/TextSmall"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.0dip"
            android:singleLine="true" />

        <TextView
            android:textAppearance="@style/Text10Size.Gray60"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_recommend_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:layout_marginBottom="0.0dip"
            android:singleLine="true" />

        <TextView
            android:textAppearance="@style/TextSmall.Red"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_follow"
            android:background="@drawable/btn_follow_selector"
            android:paddingLeft="20.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="25.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="5.0dip"
            android:text="@string/follow_it" />
    </LinearLayout>

    <com.xingin.xhs.widget.XYImageView
        android:layout_gravity="center|top"
        android:id="@+id/iv_user_ic"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        app:placeholderImage="@drawable/user_default_ic"
        app:failureImage="@drawable/user_default_ic"
        app:roundAsCircle="true"
        app:roundingBorderWidth="2.0dip"
        app:roundingBorderColor="@color/white" />
</FrameLayout>