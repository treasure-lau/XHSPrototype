<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/layout_city"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimension_15"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/iv_item_img"
        android:layout_width="128.0dip"
        android:layout_height="96.0dip"
        android:scaleType="centerCrop"
        app:placeholderImage="@color/base_bg_gray"
        app:failureImage="@color/base_bg_gray"
        app:roundedCornerRadius="5.0dip" />

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/base_black"
        android:id="@+id/tv_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:drawableLeft="@drawable/ic_tag_hash"
        android:drawablePadding="5.0dip" />

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/base_gray40"
        android:id="@+id/tv_item_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        style="@style/TextSmall" />
</LinearLayout>