<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="40.0dip"
    android:paddingBottom="40.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_friend_position_unavailable_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="@string/find_friend_position_unavailable_hint"
        style="@style/TextNormal.WhiteGray" />

    <TextView
        android:textColor="@color/base_red"
        android:gravity="center"
        android:id="@+id/tv_switch"
        android:background="@drawable/common_red_round"
        android:paddingLeft="20.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="@string/find_friend_position_switch"
        style="@style/TextNormal.WhiteGray" />
</LinearLayout>