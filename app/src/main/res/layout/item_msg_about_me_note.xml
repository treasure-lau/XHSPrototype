<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:tag="layout/item_msg_about_me_note_0"
    android:background="@drawable/common_white_to_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingLeft="@dimen/dimension_15"
        android:paddingTop="@dimen/dimension_15"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.xingin.xhs.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:tag="binding_1"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            app:roundAsCircle="true" />

        <com.xingin.xhs.widget.XYImageView
            android:id="@+id/iv_one"
            android:tag="binding_2"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_marginRight="@dimen/dimension_15"
            android:layout_alignParentRight="true"
            app:viewAspectRatio="1.0"
            app:placeholderImage="@color/background"
            app:failureImage="@color/background" />

        <com.xingin.xhs.view.FlowLayout
            android:id="@+id/tv_msg_about_me_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimension_15"
            android:layout_marginRight="@dimen/dimension_15"
            android:layout_toLeftOf="@id/iv_one"
            android:layout_toRightOf="@id/iv_avatar">

            <TextView
                android:textSize="@dimen/dimension_12"
                android:id="@+id/tv_msg_about_me_nickname"
                android:paddingRight="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/dimension_12"
                android:textColor="@color/base_gray60"
                android:id="@+id/tv_msg_about_me_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.xingin.xhs.view.FlowLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/msg_about_me_comment_layout"
            android:tag="binding_3"
            android:background="@drawable/common_bg_round_gray_96"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_10"
            android:layout_marginRight="14.0dip"
            android:layout_toLeftOf="@id/iv_one"
            android:layout_below="@id/tv_msg_about_me_title"
            android:layout_alignLeft="@id/tv_msg_about_me_title">

            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/base_gray40"
                android:gravity="center_vertical"
                android:tag="binding_4"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5.0dip"
                android:lineSpacingExtra="3.0dip" />

            <View
                android:tag="binding_5"
                android:background="@color/base_gray90"
                android:layout_width="fill_parent"
                android:layout_height="1.0px" />

            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/base_gray60"
                android:gravity="center_vertical"
                android:tag="binding_6"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5.0dip"
                android:lineSpacingExtra="3.0dip" />
        </LinearLayout>

        <View
            android:tag="binding_7"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="@dimen/dimension_15"
            android:layout_below="@id/msg_about_me_comment_layout"
            android:layout_alignLeft="@id/tv_msg_about_me_title"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View
        android:tag="binding_8"
        android:background="@null"
        android:layout_width="fill_parent"
        android:layout_height="14.0dip" />

    <View
        android:tag="binding_9"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/msg_about_me_comment_layout"
        android:layout_alignParentBottom="true" />
</LinearLayout>