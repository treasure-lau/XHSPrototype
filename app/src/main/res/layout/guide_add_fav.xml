<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="5.0"
            style="@style/GuideWhiteStyle">

            <TextView
                android:layout_gravity="center_vertical"
                android:paddingRight="4.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/tip_guide_add_fav"
                android:layout_weight="3.6"
                style="@style/TextMedium" />

            <View
                android:background="@color/line_color"
                android:layout_width="0.6dip"
                android:layout_height="32.0dip" />

            <TextView
                android:layout_gravity="center_vertical"
                android:paddingLeft="8.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/tip_i_know"
                android:layout_weight="1.3"
                style="@style/TextMedium.Red" />
        </LinearLayout>

        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="118.0dip"
            android:src="@drawable/guide_arrow_bottom_left" />

        <ImageView
            android:layout_gravity="right"
            android:paddingTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="86.0dip"
            android:src="@drawable/guide_tip_add_fav" />
    </LinearLayout>

    <ImageView
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118.0dip"
        android:layout_marginRight="120.0dip"
        android:src="@drawable/guide_finger_icon" />
</FrameLayout>