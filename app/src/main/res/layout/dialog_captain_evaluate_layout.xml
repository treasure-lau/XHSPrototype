<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/bg_ffffff_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="27.0dip"
        android:layout_marginRight="40.0dip">

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="50.0dip"
            android:layout_marginRight="30.0dip"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:layout_centerHorizontal="true"
            style="@style/EvaluateRatingBarBig" />

        <TextView
            android:id="@+id/stars_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_below="@id/ratingbar"
            android:layout_centerHorizontal="true"
            style="@style/TextMedium" />

        <EditText
            android:gravity="top"
            android:id="@+id/say"
            android:background="@drawable/bg_round_gray80_border"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:layout_margin="30.0dip"
            android:hint="@string/say_two_sth"
            android:maxLength="500"
            android:layout_below="@id/stars_level"
            android:layout_centerHorizontal="true"
            style="@style/TextSmall" />

        <Button
            android:id="@+id/btn_submit"
            android:background="@drawable/common_bottom_round_yellow"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:text="@string/smssdk_submit"
            android:layout_below="@id/say"
            style="@style/TextMedium.White" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/captain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_captain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>