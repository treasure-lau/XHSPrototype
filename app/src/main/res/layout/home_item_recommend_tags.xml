<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingBottom="12.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xingin.xhs.widget.XYImageView
        android:id="@+id/image"
        android:layout_width="85.0dip"
        android:layout_height="85.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:gravity="center"
        android:id="@+id/tv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="22.0dip"
        android:layout_marginRight="16.0dip"
        android:src="@drawable/icon_arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/TextNormal.White" />

    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:singleLine="true"
        android:layout_toLeftOf="@id/tv_follow"
        android:layout_toRightOf="@id/image"
        android:layout_alignParentTop="true"
        style="@style/TextNormal" />

    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:singleLine="true"
        android:layout_toLeftOf="@id/tv_follow"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/tv_title"
        style="@style/TextNormal.Gray60" />

    <TextView
        android:id="@+id/tv_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_toLeftOf="@id/tv_follow"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/tv_desc"
        style="@style/TextNormal.Gray80" />
</RelativeLayout>