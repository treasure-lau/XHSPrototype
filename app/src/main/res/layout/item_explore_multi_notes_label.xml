<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    android:paddingTop="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/text_12"
        android:textColor="@color/base_black"
        android:gravity="center_vertical"
        android:id="@+id/tv_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:text="@string/multi_notes"
        android:drawableLeft="@drawable/explore_label_ic"
        android:drawablePadding="10.0dip" />

    <TextView
        android:textSize="@dimen/text_12"
        android:textColor="@color/base_gray60"
        android:gravity="center_vertical"
        android:id="@+id/tv_label_see_more"
        android:paddingRight="10.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seeMore"
        android:drawableRight="@drawable/arrow_icon_right"
        android:drawablePadding="5.0dip"
        android:layout_alignParentRight="true" />
</RelativeLayout>