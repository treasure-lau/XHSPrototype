<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_board"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_title"
            android:paddingLeft="12.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/TextSmall" />

        <TextView
            android:id="@+id/tv_desc"
            android:paddingLeft="12.0dip"
            android:paddingTop="3.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/TextSmall.Gray60" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.0">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/iv_one_big"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.8000001dip"
                android:layout_weight="1.0" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/iv_two"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.8000001dip"
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="1.5999756dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.0">

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/iv_three"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.8000001dip"
                android:layout_weight="1.0" />

            <com.xingin.xhs.widget.XYImageView
                android:id="@+id/iv_four"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.8000001dip"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center|right|top"
        android:id="@+id/iv_privacy"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="12.0dip"
        android:src="@drawable/ic_board_privacy" />
</android.support.v7.widget.CardView>