<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="#00000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/bg"
        android:background="@color/transparent_black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:id="@+id/ic_container"
        android:background="@color/white"
        android:paddingTop="10.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.xingin.xhs.widget.XYImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_icon"
                android:layout_width="64.0dip"
                android:layout_height="64.0dip"
                android:layout_marginTop="12.0dip" />

            <ImageView
                android:layout_gravity="right"
                android:id="@+id/iv_share"
                android:paddingLeft="16.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="16.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_head_share"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="300.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="10.0dip"
            android:weightSum="2.0">

            <FrameLayout
                android:paddingRight="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="6.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_discovery_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextNormal" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/discovery_count"
                        style="@style/TextSmall.Gray40" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:paddingLeft="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="6.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_fans_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextNormal" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fans_count"
                        style="@style/TextSmall.Gray40" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/spit_line"
            android:background="@color/line_color"
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="16.0dip" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            style="@style/TextSmall.Gray40" />
    </LinearLayout>
</FrameLayout>