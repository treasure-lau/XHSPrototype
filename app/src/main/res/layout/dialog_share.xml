<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/share_content"
        android:background="@color/white"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_line"
        android:showDividers="middle">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/share_redChat"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="分享至REDchat"
            android:drawableLeft="@drawable/ic_red_chat"
            android:drawableRight="@drawable/icon_arrow"
            android:drawablePadding="8.0dip"
            style="@style/TextNormal.Gray40" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:layout_marginBottom="12.0dip" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_line"
        android:showDividers="middle">

        <View
            android:background="@drawable/vertical_line"
            android:layout_width="fill_parent"
            android:layout_height="0.6px" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_modify"
            android:background="@color/white"
            android:padding="16.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="修改笔记"
            style="@style/TextNormal" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_delete"
            android:background="@color/white"
            android:padding="16.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="删除笔记"
            style="@style/TextNormal.ShallowRed" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@color/white"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="@string/cancel"
            style="@style/TextNormal" />
    </LinearLayout>
</LinearLayout>